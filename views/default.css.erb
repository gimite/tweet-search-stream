body {
  font-size: 95%;
}

h1 {
  font-size: 150%;
  color: #000080;
}

a {
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

.header {
  float: right;
  font-size: 80%;
}

.logo {
  vertical-align: middle;
}

.left-column {
  float: left;
  width: 150px;
  overflow: hidden;
}

.center-column {
  margin-left: 170px;
  margin-right: 100px;
}

.buzz-nav {
  float: right;
}

.buzz-title {
  font-weight: bold;
  font-size: 80%;
  margin-bottom: 8px;
}

.buzz {
  font-size: 70%;
  white-space: nowrap;
  vertical-align: middle;
}

.buzz-icon {
  margin-right: 4px;
}

.buzz-footer {
  font-size: 70%;
  margin-top: 8px;
}

.summary {
}

.query {
  font-weight: bold;
}

.result-container {
  margin-left: 170px;
  <% if @webkit %>
    /* I'm not sure what's happening but this makes actual margin 100px in Chrome, probably
       because of existence of left-column. */
    margin-right: -50px;
  <% else %>
    margin-right: 100px;
  <% end %>
  margin-top: 8px;
  border-top: 1px solid silver;
  overflow: hidden;
}

.result {
  position: relative;
}

.result-message {
  padding-top: 8px;
  padding-bottom: 8px;
}

.status {
  position: relative;
  background-color: white;
}

.status-inner {
  padding-top: 8px;
  padding-bottom: 8px;
  border-bottom: 1px solid silver;
}

.thumbnail {
  float: left;
}

.thumbnail-img {
  width: 48px;
  height: 48px;
  border: 0px;
}

.status-body {
  margin-left: 54px;
}

.author {
  font-weight: bold;
  font-color: blue;
}

.meta {
  font-size: 70%;
  color: gray;
}

.meta a {
  color: gray;
}

.entry-date {
  color: gray;
}

.status-footer {
  clear: left;
}

.error {
  color: red;
  border: 1px solid red;
  padding: 8px;
  background-color: #ffe0e0;
  text-align: center;
}

.single-column {
  margin-left: 100px;
  margin-right: 100px;
}

.login-button {
  border: 0px;
}
